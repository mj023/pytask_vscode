{
  "name": "pytask",
  "publisher": "pytask",
  "displayName": "Pytask",
  "repository": "https://github.com/mj023/pytask_vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pytask.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pytask.build",
        "title": "Run Pytask",
        "icon": "$(run)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pytask",
          "title": "Pytask",
          "icon": "media/pytask.svg"
        }
      ]
    },
    "views": {
      "pytask": [
        {
          "id": "tasks",
          "name": "Tasks",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "when": "view == tasks",
          "command": "pytask.build",
          "group": "navigation"
        }
      ]
    }
  },
  "extensionDependencies": ["ms-python.python"],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.17.4",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
